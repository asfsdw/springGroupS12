<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.springGroupS12.dao.ComplaintDAO">
	<select id="getComplaintIdx" resultType="com.spring.springGroupS12.vo.ComplaintVO">
		SELECT * FROM complaint WHERE idx = #{idx};
	</select>
	<select id="getComplaintList" resultType="com.spring.springGroupS12.vo.ComplaintVO">
		SELECT * FROM complaint <if test="progress != '전체'">WHERE progress = #{progress} </if>ORDER BY cpDate;
	</select>
	<select id="getComplaintPartIdx" resultType="com.spring.springGroupS12.vo.ComplaintVO">
		SELECT * FROM complaint WHERE part = #{part} AND partIdx = #{partIdx};
	</select>
	
	<insert id="setComplaintInput">
		INSERT INTO complaint VALUES(DEFAULT,#{vo.part},#{vo.partIdx},#{vo.parentTitle},#{vo.cpMid},#{vo.cpContent},DEFAULT,DEFAULT);
	</insert>
	
	
	
	<update id="setComplaintProgressUpdate">
		UPDATE complaint SET progress = #{progress} WHERE idx = #{idx};
	</update>
	
	<update id="setComplaintParentUpdate">
		UPDATE ${part} SET complaint = #{flag} WHERE idx = #{partIdx};
	</update>
	
	<delete id="setComplaintDelete">
		DELETE FROM complaint WHERE idx = #{idx};
	</delete>
</mapper>